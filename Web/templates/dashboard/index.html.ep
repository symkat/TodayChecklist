% layout 'user', title => 'Dashboard', sb_active => 'dashboard';

<div class="mt-5 mb-5"></div>

%= include 'dashboard/_nav', page => 'documents'

<a href="<%= $c->url_for( 'show_dashboard_document' ) %>" style="margin-left: 1.5em" class="btn btn-sm btn-outline-secondary float-end">
    <span data-feather="settings"></span>
</a>

% if ( $c->stash->{documents} ) {
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            % foreach my $document ( @{$c->stash->{documents}} ) {
            <tr>
                <th><%= $document->name %></th>
                <th><%= $document->description %></th>
                <td>
                    <form method="post" target="_blank" action="<%= $c->url_for( 'do_document_render') %>">
                        <input type="hidden" name="document_id" value="<%= $document->id %>">

                        <button style="margin-left: 1.5em" class="btn btn-sm btn-outline-secondary">
                            <span data-feather="printer"></span>
                        </button>
                    </form>
                </td>
            </tr>
        % }
        </tbody>
    </table>
% }
