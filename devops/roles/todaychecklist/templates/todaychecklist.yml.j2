---
database:
  todaychecklist: postgresql://{{ database.todaychecklist.user }}:{{ database.todaychecklist.pass }}@{{ database.todaychecklist.host }}/todaychecklist

secrets:
{% for secret in secrets %}
  - {{ secret }}
{% endfor %}

smtp:
  host: {{ smtp.host }} 
  port: {{ smtp.port }}
  sasl_username: {{ smtp.sasl_username }}
  sasl_password: {{ smtp.sasl_password }}

mkit_path: {{ mkit_path }}
domain: {{ domain_name  }}

stripe_backend: {{ stripe_backend }}

stripe_api_key: {{ stripe_api_key }}
stripe_return_domain: {{ stripe_return_domain }}

